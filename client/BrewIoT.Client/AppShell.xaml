<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BrewIoT.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:devices="clr-namespace:BrewIoT.Client.Devices.Pages"
    xmlns:recipes="clr-namespace:BrewIoT.Client.Recipes.Pages"
    FlyoutBehavior="Disabled"
    Title="BrewIoT.Client">

    <TabBar>
        <Tab 
            Title="Devices"
            Icon="devices.png">
            <ShellContent ContentTemplate="{DataTemplate devices:DeviceListPage}" />
        </Tab>
    
        <Tab 
            Title="Recipes"
            Icon="recipes.png">
            <ShellContent ContentTemplate="{DataTemplate recipes:RecipeListPage}" />
        </Tab>
    </TabBar>

</Shell>
